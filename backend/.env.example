# Production Environment Variables for Backend
# Copy this to .env and update the values

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/feedback_system

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex-at-least-32-characters

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
FRONTEND_URL=https://your-frontend-url.vercel.app

# Email Configuration (Optional - for notifications)
EMAIL_USER=your-college-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourcollege.edu
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
